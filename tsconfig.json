{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "transpileOnly": true,
        "forceIsolatedModules": true,
        "reportFiles": [
            "src/**/*.ts",
            "test/**/*.ts"
        ],
        "useBabel": true,
        "babelOptions": {
            "babelrc": false,
            "presets": [
                ["env"]
            ],
            "plugins": [
                ["transform-runtime"]
            ]
        }
    }
}