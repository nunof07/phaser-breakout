{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "forceIsolatedModules": true,
        "reportFiles": ["src/**/*.ts"]
    }
}